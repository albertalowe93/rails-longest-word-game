<div class="container">
  <h1 class="my-3">New Game</h1>
  <h4 class="my-3"><%= @letters %></h4>

  <h4 class="my-3">What is the longest word you can find?</h4>
  <form action='score' method='post' class="d-flex my-3">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="word" placeholder="Enter a word..." class="flex-grow-1">
    <input type="submit" value="Play" class="btn btn-primary">
    <input type='hidden' name="grid" value=<%=@letters%>>
  </form>
</div>
